<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="70dp"

    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/ovalwhite">
    <ImageView
        android:id="@+id/emotionimage"
        android:layout_width="40dp"
        android:layout_height="40dp"

        /></LinearLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/nameemotion"
        android:layout_width="wrap_content"
        android:autoSizeMinTextSize="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/alegreyaregular"
        android:textSize="12sp"
        android:text="Test"/>
</LinearLayout>